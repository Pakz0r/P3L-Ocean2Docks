<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:clickable="false"
    android:background="@drawable/menubg"
    android:gravity="center_vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Navigator"
        android:id="@+id/button"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:drawableLeft="@drawable/navigator"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:clickable="true"
        android:onClick="StartNavigator" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ECDIS"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:drawableLeft="@drawable/ecdis"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:clickable="true"
        android:onClick="StartEcdis" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Radar"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:drawableLeft="@drawable/radar"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:onClick="StartRadar"
        android:clickable="true" />

</RelativeLayout>